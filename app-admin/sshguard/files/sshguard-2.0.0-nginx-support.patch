+HOSTNAME    ([-a-zA-Z0-9]+\.)*[-a-zA-Z0-9]+
 HOSTADDR    localhost|([-a-zA-Z0-9]+\.)+[a-zA-Z]+|{IPV4}|{IPV6}|{IPV4MAPPED6}
 FACLEVEL    (<[a-zA-Z0-9]+\.[a-zA-Z0-9]+>)
 
+HTTP_REQUEST   (GET|HEAD|PUT|POST|DELETE)
