 %%
 
@@ -142,6 +146,7 @@
     | proftpdmsg        {   attack->service = SERVICES_PROFTPD; }
     | pureftpdmsg       {   attack->service = SERVICES_PUREFTPD; }
     | vsftpdmsg         {   attack->service = SERVICES_VSFTPD; }
+    | nginxmsg          {   attack->service = SERVICES_NGINX; }
     ;
 
 /* an address */
@@ -253,6 +258,12 @@
